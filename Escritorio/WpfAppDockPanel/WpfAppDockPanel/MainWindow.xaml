<Window x:Class="WpfAppDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True"> 
        <!--ojo con LastChildFill que lo que hace es llenar el espacio diponible 
        con el último elemento-->
        <Button DockPanel.Dock="Top" Content="Barra de menú" />
        <Button DockPanel.Dock="Right" Content="columna"/>
        <Button DockPanel.Dock="Left" Content="herramientas"/>
        <Button DockPanel.Dock="Bottom" Content="barra de estado"/>
        <InkCanvas/>
    </DockPanel>
</Window>
