<Window x:Class="Ejercicio1_Palabras.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio1_Palabras"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <StackPanel>
            <ListBox x:Name="lbPalabras" Background="Black" Foreground="White" Height="300" FontSize="24" ScrollViewer.CanContentScroll="False"/>
            <TextBlock x:Name="tbkPalabra" Background="LightGreen" TextAlignment="Center" FontSize="48" Height="64"/>
            <Button x:Name="botSiguiente" Content="Siguiente" Margin="10" HorizontalAlignment="Center" Click="botSiguiente_Click"/>
            <Button x:Name="botA" HorizontalAlignment="Center" Width="60" IsDefault="True" Click="botA_Click">
                <TextBox x:Name="tbxLetra" 
                         Margin="10"
                         Width="20" 
                         MaxLength="1"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
