<Window x:Class="Ejercicio7_MaquinaCafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio7_MaquinaCafe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="spMonedas" Grid.Column="0" Margin="10,10,10,10" Background="gold" Grid.RowSpan="3"/>
        <StackPanel x:Name="spProductos" Grid.Column="1" Margin="10,10,10,10" Background="Chocolate" Grid.RowSpan="3"/>
        <TextBlock x:Name="tbDisplay" Grid.Column="2" Grid.Row="0" Margin="10" Background="Black" Foreground="White" TextAlignment="Center"/>
        <TextBlock x:Name="tbVuelta" Grid.Column="2" Grid.Row="1" Margin="10" Background="Gray" />
        <TextBlock x:Name="tbDispensador" Grid.Column="2" Grid.Row="2" Margin="10" Background="LightGreen"/>
    </Grid>
</Window>
